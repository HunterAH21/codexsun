{
  "name": "codexsun",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:api": "tsx watch server.ts",
    "dev:web": "vite --config apps/cxsun/vite.config.ts",
    "dev": "run-p dev:api dev:web",
    "build": "tsup server.ts --format esm --dts --out-dir dist --clean",
    "start": "node dist/server.js",
    "clean:all": "pnpm -r run --if-present clean && pnpm prune && pnpm store prune",
    "cx": "tsx cortex/cli/index.ts",
    "tests": "tsx cortex/tests/test.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "fastify": "^4.28.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@types/node": "^22.7.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv": "^17.2.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
