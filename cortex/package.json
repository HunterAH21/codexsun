{
  "name": "@codexsun/cortex",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.cjs",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --dts --out-dir dist --clean",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist .turbo && rimraf --glob \"*.tsbuildinfo\""
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.6.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "fastify": "^5.5.0",
    "mariadb": "^3.4.5",
    "mongodb": "^6.19.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.4",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@fastify/static": "^8.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/pg": "^8.15.5",
    "@types/sqlite3": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "typescript": "^5.9.2",
    "tsup": "^8.5.0",
    "zod": "^4.1.5"
  }
}
