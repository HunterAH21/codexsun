{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@codexsun/*": ["codexsun/*"],
      // or, if you prefer to target the cortex folder directly:
       "@cortex/*": ["cortex/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
}
